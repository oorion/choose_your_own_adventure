<%= @story.title %><br>
<%= @story.text %>

<%= form_for @continuation_story do |f| %>
  <%= f.text_field :title, placeholder: 'Enter your title here' %>
  <%= f.text_field :text, placeholder: 'Enter your story here' %>
  <%= f.hidden_field :story_id, value: @story.id %>
  <%= f.submit 'Submit' %>
<% end %>
